<QuestionLayout>
    MDBoxLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: '../resources/stars_background.jpg'
        halign: 'center'
        padding: 40
        orientation: 'vertical'
        MDLabel:
            halign: 'center'
            font_style: "H2"
            markup: True
            text: '[color=FF5555]'+root.criterion
        MDLabel:
            halign: 'center'
            font_style: "H3"
            markup: True
            text: "[color=87CEFA]"+root.left_planet_name+"[/color]" + ' '+root.comp_text +' '
        MDTextField:
            id: comp_input_field
            font_size: 45
            halign: 'center'
            text: "1.0"
            focus: True
        MDLabel:
            halign: 'center'
            font_style: "H3"
            markup: True
            text: 'times than [color=87CEFA]'+ root.right_planet_name+"[/color]"
        MDLabel:
            halign: 'center'
            font_style: "H3"
            markup: True
            text: root.additional_bottom_info
        MDRaisedButton:
            halign: 'center'
            text: "OK"
            id: next_question_button
